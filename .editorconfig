# Documentation: https://editorconfig.org/

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Language specific settings
[*.js]
indent_style = space
indent_size = 2
max_line_length = 120

[*.rs]
indent_style = space
indent_size = 2
max_line_length = 120
